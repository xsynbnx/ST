bash 授权
base_dir="/storage/emulated/0/ST制作区"
sub_dirs=(
    "pak"
    "打包dat"
    "解包dat"
    "打包uexp"
    "解包uexp"
    "小包/伪实体"
    "小包/载具"
    "小包/非块存放"
    "提取配置/原pak"
    "提取配置/改pak"
    "提取dat储存区"
    "自动美化存放区"
)

# 创建主目录
mkdir -p "$base_dir" || {
    echo "无法创建目录，请检查存储权限！"
    exit 1
}

# 创建子目录
for dir in "${sub_dirs[@]}"; do
    mkdir -p "$base_dir/$dir" && echo "已创建: $base_dir/$dir"
done

echo "所有目录创建完成！"

./进入工具
